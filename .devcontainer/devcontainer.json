{ 
    "name": "GradeReportAndAnalysis",
    "build": { 
        "dockerfile": "Dockerfile", 
        "context": "..",
        "args": {"PYTHON_VERSION": "3.9"} 
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.mypy-type-checker",
                "ms-python.vscode-pylance",
                "ms-python.pylint",
                "ms-python.python",
                "ms-python.debugpy",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "git.path": "/usr/bin/git"
            }
        }
    }
} 